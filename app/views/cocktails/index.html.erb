<div id="index">
  <h1>Cocktails</h1>

  <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path @article.photo.key, height: 300, width: 400, crop: :fill %>')">
    <% @cocktails.each do |cocktail| %>
    <div class="card-body">
      <h5 class="card-title"><%= link_to cocktail.name, cocktail_path(cocktail) %></h5>
    </div>
    <% end %>
  </div>

  <button type="button" class="btn btn-primary btn-sm"> <%= link_to 'Create your own cocktail', cocktails_new_path %> </button>

</div>